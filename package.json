{
  "name": "minecraft-cli",
  "version": "0.0.2",
  "description": "A CLI for setting up and controlling Minecraft servers.",
  "main": "cli.js",
  "scripts": {
    "test": "dpkg -i *.deb && mc --help",
    "build-deb": "node-deb -- cli.js bin/ lib/",
    "start": "bin/minecraft-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/HexagonMinecraft/mc-cli.git"
  },
  "bin": {
    "minecraft-cli": "bin/minecraft-cli.js"
  },
  "keywords": [
    "mc",
    "minecraft",
    "cli",
    "command line interface",
    "server"
  ],
  "author": "Hexagon MC <admin@hexagonminecraft.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HexagonMinecraft/mc-cli/issues"
  },
  "homepage": "https://github.com/HexagonMinecraft/mc-cli#readme",
  "dependencies": {
    "cli-color": "^1.1.0",
    "command-exists": "^1.2.0",
    "commander": "^2.9.0",
    "decompress": "^4.0.0",
    "del": "^2.2.2",
    "download-file": "^0.1.5",
    "progress": "^2.0.0",
    "q": "^1.5.0",
    "request": "^2.79.0",
    "request-progress": "^3.0.0",
    "shelljs": "^0.7.6"
  },
  "devDependencies": {
    "request": "^2.81.0",
    "node-deb": "0.9.0"
  },
  "node_deb": {
    "init": "none",
    "dependencies": "nodejs",
    "entrypoints": {
      "cli": "bin/minecraft-cli.js"
    },
    "templates": {
      "postinst": "scripts/deb-postinstall.sh"
    },
    "description": "A CLI for setting up and controlling Minecraft servers.",
    "executable_name": "mc",
    "package_name": "mc-cli"
  },
  "pkg": {
    "scripts": "lib/**/*.js"
  }
}